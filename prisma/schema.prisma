generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  engineType      = "library"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String?
  points       Int           @default(0)
  level        Int           @default(1)
  streak       Int           @default(0)
  lastActivity DateTime      @default(now())
  attempts     Attempt[]
  achievements Achievement[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  savedQuestions SavedQuestion[]
}

model Achievement {
  id          String   @id @default(cuid())
  type        String // e.g., "MOLE_MASTER", "FIRST_QUIZ"
  name        String
  description String?
  unlockedAt  DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Subject {
  id        String     @id @default(cuid())
  name      String     @unique
  questions Question[]
  attempts  Attempt[]
}

model Question {
  id             String   @id @default(cuid())
  text           String
  options        String // JSON string of array
  correctOption  Int // 0-based index
  subjectId      String
  subject        Subject  @relation(fields: [subjectId], references: [id])
  savedBy        SavedQuestion[]
}

model Attempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  score     Int
  correct   Int
  wrong     Int
  date      DateTime @default(now())
}

model SavedQuestion {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([userId, questionId])
}
