generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  MODERATOR
  ADMIN
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String?
  role         Role          @default(STUDENT)
  points       Int           @default(0)
  level        Int           @default(1)
  streak       Int           @default(0)
  lastActivity DateTime      @default(now())
  attempts     Attempt[]
  achievements Achievement[]
  notes        Note[]
  activityLogs ActivityLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String // e.g., "LOGIN", "START_QUIZ", "SUBMIT_QUIZ"
  metadata  String? // JSON string for extra info
  createdAt DateTime @default(now())
}

model Achievement {
  id          String   @id @default(cuid())
  type        String // e.g., "MOLE_MASTER", "FIRST_QUIZ"
  name        String
  description String?
  unlockedAt  DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Subject {
  id             String     @id @default(cuid())
  name           String     @unique
  description    String?
  questions      Question[]
  attempts       Attempt[]
  notes          Note[]
  prerequisites  Subject[]  @relation("SubjectPrerequisites")
  requiredFor    Subject[]  @relation("SubjectPrerequisites")
}

model Note {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id            String  @id @default(cuid())
  text          String
  options       String // JSON string of array
  correctOption Int // 0-based index
  subjectId     String
  subject       Subject @relation(fields: [subjectId], references: [id])
}

model Attempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  score     Int
  correct   Int
  wrong     Int
  date      DateTime @default(now())
}
